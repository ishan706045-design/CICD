{
  "name": "textuned-backend",
  "version": "1.0.0",
  "description": "TEXTuned backend API with Express, Firestore, HMAC authentication, and idempotency middleware.",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "start:dev": "cross-env NODE_ENV=development nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "lint": "eslint 'src/**/*.ts'",
    "test": "jest",
    "docker:build": "docker build -t textuned-backend .",
    "docker:run": "docker run -p 3000:3000 textuned-backend"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.11.3",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "cross-env": "^10.0.0",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "firebase-admin": "^13.5.0",
    "google-auth-library": "^10.3.0",
    "helmet": "^8.1.0",
    "string-strip-html": "^8.5.0",
    "uuid": "^11.0.3",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.5.5",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.12.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT"
}
